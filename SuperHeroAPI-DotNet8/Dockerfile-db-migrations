# Use the official .NET SDK image to build and run the migrations
FROM mcr.microsoft.com/dotnet/sdk:8.0

# Set the working directory inside the container
WORKDIR /app

# Copy the .csproj file and restore dependencies
COPY *.csproj ./
RUN dotnet restore

# Copy the rest of the application code
COPY . ./

# Build the application (optional if migrations are being run only)
RUN dotnet build -c Release --no-restore

# Set the entry point for the migrations service
CMD ["powershell", "-command", "Update-Database"]